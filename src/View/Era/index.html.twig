{% extends 'layout.html.twig' %}

{% block content %}
{% if chapters.0.id == 15 %}
	<img class="MobileChapterImage" src="/assets/images/{{ chapters.0.background_image }}"></div>{% endif %}<section class="col-1">
<p>blabla</p></section><section class="col-11">
<section id="tags-selection">
	<button class="all-button">Tous</button>
	<button class="family-button"># tout public</button>
	<button class="adult-button"># déconseillé au moins de 12 ans</button>
</section>

{% for movie in movies %}
	<div class="{{ movie.public }} card mb-3 p-2 col-md-10 container d-flex flex-column">
		<div class="row g-0 justify-content-start">
			<div class="col-md-3">
				<img src="{{ movie.url_image }}" class="img-fluid rounded-start">
			</div>
			<div class="col-md-8">
				<div class="card-body row justify-content-end">
					<h5 class="card-title fw-bold">
						{{ movie.title }}
					</h5>
					<p class="card-text">
						{{ movie.description }}
					</p>
					<p class="card-text">{{ movie.public }}</p>
				</div>
			</div>
		</div>
	</div>
{% endfor %}</section><script src="/script/script.js"></script>
{% endblock %}
