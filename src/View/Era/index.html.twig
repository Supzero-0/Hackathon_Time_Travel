{% extends 'layout.html.twig' %}

{% block content %}
	<section class="row">
		<section class="col-1">
			<p>blabla</p>
		</section>

		<section class="col-11">
			<div id="tags-selection">
				<button class="all-button">Tous</button>
				<button class="family-button"># tout public</button>
				<button class="adult-button"># déconseillé au moins de 12 ans</button>
			</div>
			{% for movie in movies %}
				<div class="{{ movie.public }} card mb-3 p-2 col-md-10 container ">
					<div class="row g-0 justify-content-start">
						<div class="col-md-3">
							<img src="{{ movie.url_image }}" class="img-fluid rounded-start">
						</div>
						<div class="col-md-8">
							<div class="card-body row justify-content-end">
								<h5 class="card-title fw-bold">{{ movie.title }}</h5>
								<p class="card-text">{{ movie.description }}</p>
								<p class="card-text">{{ movie.public }}</p>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</section>
	</section>
	<script src="/script/script.js"></script>
{% endblock %}
